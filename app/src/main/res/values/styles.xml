<?xml version="1.0"?>

<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/Green</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>


    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/Green</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>


    <style name="Theme.AppCompat.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/Green</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppCompat.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Hidetext" parent="Theme.AppCompat.NoActionBar.PopupOverlay">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/Green</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" color="@color/colortitle" parent="Theme.AppCompat.Light" />

    <style name="Theme.AppCompat.NoActionBar.NoActionBar.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>

        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

    </style>

    <style name="Theme.AppCompat.NoActionBar.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppCompat.NoActionBar.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fc_lamoon_bold</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/fc_lamoon_bold</item>
    </style>

</resources>